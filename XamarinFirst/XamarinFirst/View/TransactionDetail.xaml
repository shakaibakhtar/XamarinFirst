<?xml version="1.0" encoding="utf-8" ?>
<ContentPage Title="Transaction Detail"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="XamarinFirst.View.TransactionDetail">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <ScrollView Grid.Row="0">
                <Grid Padding="20, 10" BackgroundColor="#EFEFF4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>


                    <Frame CornerRadius="100" BackgroundColor="{StaticResource ThemeBGColor}" Grid.Row="0" Grid.Column="0" HorizontalOptions="Fill" Padding="30, 10" HasShadow="False" IsClippedToBounds="True">
                        <StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                            <Label FontFamily="Regular"  TextColor="{StaticResource ThemeTextColor}" FontSize="Small" Text="Title" HorizontalOptions="CenterAndExpand"/>
                            <Label FontFamily="Bold" TextColor="{StaticResource ThemeTextColor}" FontSize="Small" Text="{Binding Transaction.Title}" HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center"/>
                        </StackLayout>
                    </Frame>

                    <Frame CornerRadius="100" BackgroundColor="{StaticResource ThemeBGColor}"
                   Grid.Row="0"
                   Grid.Column="1"
                   HorizontalOptions="FillAndExpand"
                   Padding="30, 10"
                   IsClippedToBounds="True">
                        <StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand">
                            <Label FontFamily="Regular" TextColor="{StaticResource ThemeTextColor}" FontSize="Small" Text="Amount" HorizontalOptions="CenterAndExpand"/>
                            <Label FontFamily="Bold" TextColor="{StaticResource ThemeTextColor}" FontSize="Small" Text="{Binding Transaction.Amount}" HorizontalOptions="CenterAndExpand"/>
                        </StackLayout>
                    </Frame>
                    <Frame CornerRadius="100" BackgroundColor="{StaticResource ThemeBGColor}"
                   Grid.Row="1"
                   Grid.ColumnSpan="2"
                   HorizontalOptions="FillAndExpand"
                   Padding="30, 10"
                   IsClippedToBounds="True">
                        <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
                            <Label FontFamily="Regular" TextColor="{StaticResource ThemeTextColor}" FontSize="Small" Text="Time, Date" HorizontalOptions="CenterAndExpand"/>
                            <Label FontFamily="Bold" TextColor="{StaticResource ThemeTextColor}" FontSize="Small" Text="{Binding Transaction.Date}" HorizontalOptions="CenterAndExpand"/>
                        </StackLayout>
                    </Frame>

                    <Frame CornerRadius="100" BackgroundColor="{StaticResource ThemeBGColor}"
                   Grid.Row="2"
                   Grid.ColumnSpan="2"
                   HorizontalOptions="FillAndExpand"
                   Padding="30, 10"
                   IsClippedToBounds="True">
                        <StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand">
                            <Label FontFamily="Regular" TextColor="{StaticResource ThemeTextColor}" FontSize="Small" Text="Made By User" HorizontalOptions="CenterAndExpand"/>
                            <Label FontFamily="Bold" TextColor="{StaticResource ThemeTextColor}" FontSize="Small" Text="{Binding Transaction.MadeByUser}" HorizontalOptions="CenterAndExpand"/>
                        </StackLayout>
                    </Frame>

                    <Frame CornerRadius="100" BackgroundColor="#D40404"
                   Grid.Row="3"
                   Grid.ColumnSpan="2"
                   HorizontalOptions="FillAndExpand"
                   Padding="30, 10"
                   IsClippedToBounds="True">
                        <StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand">
                            <Label FontFamily="Regular" TextColor="{StaticResource ThemeTextColor}" FontSize="Small" Text="Transaction Type" HorizontalOptions="CenterAndExpand"/>
                            <Label FontFamily="Bold" TextColor="{StaticResource ThemeTextColor}" FontSize="Small" Text="{Binding Transaction.TransactionType}" HorizontalOptions="CenterAndExpand"/>
                        </StackLayout>
                    </Frame>

                    <Frame CornerRadius="100" BackgroundColor="{StaticResource ThemeBGColor}"
                   Grid.Row="4"
                   Grid.ColumnSpan="2"
                   HorizontalOptions="FillAndExpand"
                   Padding="30, 10"
                   IsClippedToBounds="True">
                        <StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand">
                            <Label FontFamily="Regular" TextColor="{StaticResource ThemeTextColor}" FontSize="Small" Text="Account Debited" HorizontalOptions="CenterAndExpand"/>
                            <Label FontFamily="Bold" TextColor="{StaticResource ThemeTextColor}" FontSize="Small" Text="{Binding Transaction.AccountDebited}" HorizontalOptions="CenterAndExpand"/>
                        </StackLayout>
                    </Frame>

                    <Frame CornerRadius="100" BackgroundColor="{StaticResource ThemeBGColor}"
                   Grid.Row="5"
                   Grid.ColumnSpan="2"
                   HorizontalOptions="FillAndExpand"
                   Padding="30, 10"
                   IsClippedToBounds="True">
                        <StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand">
                            <Label FontFamily="Regular" TextColor="{StaticResource ThemeTextColor}" FontSize="Small" Text="Account Credited" HorizontalOptions="CenterAndExpand"/>
                            <Label FontFamily="Bold" TextColor="{StaticResource ThemeTextColor}" FontSize="Small" Text="{Binding Transaction.AccountCredited}" HorizontalOptions="CenterAndExpand"/>
                        </StackLayout>
                    </Frame>

                    <Frame CornerRadius="100" BackgroundColor="{StaticResource ThemeBGColor}"
                   Grid.Row="6"
                   Grid.ColumnSpan="2"
                   HorizontalOptions="FillAndExpand"
                   Padding="30, 10"
                   IsClippedToBounds="True">
                        <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
                            <Label FontFamily="Regular" TextColor="{StaticResource ThemeTextColor}" FontSize="Small" Text="Note" HorizontalOptions="CenterAndExpand"/>
                            <Label FontFamily="Bold" TextColor="{StaticResource ThemeTextColor}" FontSize="Small" Text="{Binding Transaction.Note}" HorizontalOptions="CenterAndExpand"/>
                        </StackLayout>
                    </Frame>
                </Grid>
            </ScrollView>
            <Frame HorizontalOptions="End" CornerRadius="0" IsClippedToBounds="True" Padding="0" BackgroundColor="{StaticResource ThemeBGColor}" Margin="0,0,10,22" VerticalOptions="End">
                <ImageButton Command="{Binding TakeSSCommand}" Source="SSIcon.png" HeightRequest="40" WidthRequest="40" BackgroundColor="{StaticResource ThemeBGColor}"/>
            </Frame>
        </Grid>
    </ContentPage.Content>
</ContentPage>